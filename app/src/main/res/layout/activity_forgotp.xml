<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="350dp" android:layout_height="200dp"
        android:background="#FFF"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        tools:context=".forgotp"

>


    <TextView
            android:layout_width="250dp"
            android:layout_height="69dp"
            android:textColor="#000"

            android:textSize="24sp"
            android:text="@string/check_your_mail_for_the_link_to_log_in" android:id="@+id/forgotPopText"
    />

    <Button android:layout_width="133dp"
            android:layout_height="wrap_content"

            android:textSize="24sp"
            android:background="#43D6E4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:id="@+id/closeBtn"
            android:text="Click me"
            android:textColor="#FFF"

    />

